<Window x:Class="trabalhoPOO.Views.AddImovelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registar Novo Imóvel" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Morada do Imóvel" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Morada, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

            <TextBlock Text="Valor da Renda (€)" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding ValorRenda, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

            <TextBlock Text="Tipo de Imóvel" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox SelectedValue="{Binding TipoImovel}" SelectedValuePath="Content" Margin="0,0,0,20">
                <ComboBoxItem Content="Apartamento" IsSelected="True"/>
                <ComboBoxItem Content="Moradia"/>
                <ComboBoxItem Content="Quarto"/>
            </ComboBox>

            <Button Content="Guardar Imóvel" 
                    Height="35" 
                    FontWeight="Bold"
                    Command="{Binding SaveImovelCommand}"/>
        </StackPanel>
    </Grid>
</Window>