<Window x:Class="trabalhoPOO.Views.RegistryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registo de Utilizador" Height="450" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PassBox" Margin="0,0,0,10"/>

            <TextBlock Text="Nível de Acesso" Margin="0,0,0,5"/>
            <ComboBox SelectedValue="{Binding NivelAcesso}" SelectedValuePath="Content" Margin="0,0,0,10">
                <ComboBoxItem Content="Inquilino" IsSelected="True"/>
                <ComboBoxItem Content="Proprietario"/>
            </ComboBox>

            <TextBlock Text="ID Pessoa Associada" Margin="0,0,0,5"/>
            <TextBox Text="{Binding IdPessoa, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

            <Button Content="Registar" 
                    Height="30"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding ElementName=PassBox}"/>

            <Button Content="Já tem conta? Faça Login aqui" 
                    Margin="0,15,0,0"
                    Background="Transparent" 
                    BorderThickness="0" 
                    Foreground="Blue" 
                    Cursor="Hand"
                    Command="{Binding GoToLoginCommand}"/>
        </StackPanel>
    </Grid>
</Window>