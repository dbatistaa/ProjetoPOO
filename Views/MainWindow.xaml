<Window x:Class="trabalhoPOO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Gestão de Condominios" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="#007ACC" Padding="15">
            <DockPanel>
                <TextBlock Text="Painel de Controlo" Foreground="White" FontSize="18" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding InfoUtilizador}" Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Sair" Width="60" Click="BtnSair_Click" Cursor="Hand"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Margin="20">
            <StackPanel Visibility="{Binding VisibilidadeProprietario}">
                <TextBlock Text="Gestão de Imóveis (Proprietário)" FontSize="20" Margin="0,0,0,20"/>
                <UniformGrid Columns="2">
                    <Button Content="Adicionar Novo Imóvel" Height="100" Margin="10" Click="BtnAddImovel_Click"/>
                    <Button Content="Ver Meus Imóveis" Height="100" Margin="10" Click="BtnVerMeusImoveis_Click"/>
                    <Button Content="Validar Pagamentos" Height="100" Margin="10"/>
                    <Button Content="Relatórios de Despesas" Height="100" Margin="10"/>
                    <Button Content="Consultar Utilizadores" 
                         Click="BtnListar_Click"
                         Visibility="{Binding VisibilidadeProprietario}" 
                         Width="150" Height="30"/>
                </UniformGrid>
            </StackPanel>

            <StackPanel Visibility="{Binding VisibilidadeInquilino}">
                <TextBlock Text="Portal do Inquilino" FontSize="20" Margin="0,0,0,20"/>
                <UniformGrid Columns="2">
                    <Button Content="Ver Meus Contratos" Height="100" Margin="10"/>
                    <Button Content="Registar Despesa" Height="100" Margin="10"/>
                    <Button Content="Histórico de Pagamentos" Height="100" Margin="10"/>
                    <Button Content="Contactar Proprietário" Height="100" Margin="10"/>
                </UniformGrid>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>