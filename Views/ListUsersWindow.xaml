<Window x:Class="trabalhoPOO.Views.ListUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Listagem de Utilizadores" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <DockPanel>
            <TextBlock Text="Utilizadores Registados no Sistema" DockPanel.Dock="Top" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <DataGrid ItemsSource="{Binding ListaUtilizadores}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      AlternatingRowBackground="#F0F0F0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID Pessoa" Binding="{Binding IdPessoaAssociada}" Width="80"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Cargo" Binding="{Binding NivelAcesso}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>