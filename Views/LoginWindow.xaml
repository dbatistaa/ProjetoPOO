<Window x:Class="trabalhoPOO.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Sistema de Gestão" Height="320" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Email" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,10" Height="28" VerticalContentAlignment="Center"/>

            <TextBlock Text="Password" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <PasswordBox x:Name="LoginPassBox" Margin="0,0,0,20" Height="28" VerticalContentAlignment="Center"/>

            <Button Content="Entrar" 
                    Height="35" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=LoginPassBox}"/>

            <Button Content="Não tem conta? Registe-se aqui" 
                    Margin="0,15,0,0"
                    Background="Transparent" 
                    BorderThickness="0" 
                    Foreground="Blue" 
                    Cursor="Hand"
                    Command="{Binding GoToRegistryCommand}"/>
        </StackPanel>
    </Grid>
</Window>